<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Listing Orders</h1>
        <br />
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Pay type</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      <% @orders.each do |order| %>
        <tr class="<%= cycle('list_item_odd', 'list_item_even') %>">
          <td><%= order.name %></td>
          <td><%= order.address %></td>
          <td><%= order.email %></td>
          <td><%= order.pay_type %></td>
          <td><%= link_to 'Show', [order.store, order] %></td>
          <td><%= link_to 'Edit', edit_store_order_path(order.store, order) %></td>
          <td><%= link_to 'Destroy', [order.store, order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>
      <br />
    </div>
  </div>
</div>