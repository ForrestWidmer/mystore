<%= div_for(line_item, class: "row") do %>
  <div class="col-md-12">
  
  <% if line_item == @current_item %>
    <ul class="text-left" id="current_item">
  <% else %>
    <ul class="text-left">
  <% end %>
    <li>
      <%= line_item.product.title %> <br>
      &times; <%= line_item.quantity %> 
      <%= number_to_currency(line_item.price) %> 
      <%= button_to "Remove Item?", line_item, method: :delete, class: "btn btn-primary btn-xs", remote: true %>
    </li>
  </ul>
  </div>
<% end %>