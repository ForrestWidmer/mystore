<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Listing products</h1>
<br />
      <table class="table">
      <% @products.each do |product| %>
        <tr class="<%= cycle('list_item_odd', 'list_item_even') %>">
          <td><%= image_tag(product.image_url) %></td>
          <td><%= product.title %></td>
          <td><%= truncate(strip_tags(product.description), length: 80, seperator: " ") %></td>
          <td><%= product.image_url %></td>
          <td><%= product.price %></td>
          <td><%= link_to 'Show', [product.store, product] %></td>
          <td><%= link_to 'Edit', edit_store_product_path(product.store, product) %></td>
          <td><%= link_to 'Destroy', [product.store, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>

      <br />

      <%= link_to 'New Product', new_store_product_path %>
    </div>
  </div>
</div>